<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">        <title>Address Book</title>
    </head>
    <body>
        <div class="container">
            <h1>Address Book</h1>
            <form action="/create_contact" method="post">
                <h2>Enter New Contact Info</h2>
                <div class="form-group">
                    <label for="name">Full Name:</label>
                    <input type="text" class="form-control" name="name" id="name">
                </div>
                <div class="form-group">
                    <label for="phone">Phone Number:</label>
                    <input type="text" class="form-control" name="phone" id="phone">
                </div>
                <div class="form-group">
                    <label for="street">Street Address:</label>
                    <input type="text" class="form-control" name="street" id="street">
                </div>
                <div class="form-group">
                    <label for="city">City, State, Zip:</label>
                    <input type="text" class="form-control" name="city" id="city">
                </div>
                <button class="btn btn-info" type="submit">Add Contact</button>
            </form>
            {% if contacts is not empty %}
                {% for contact in contacts %}
                    <div>
                        <h2>{{ contact.getName }}</h2>
                        <p>{{ contact.getPhone }}</p>
                        <p>{{ contact.getStreet }}</p>
                        <p>{{ contact.getCity }}</p>
                    </div>
                {% endfor %}
            {% endif %}
            <form action='/delete_contacts'>
                <button type="submit" class="btn-danger">Delete All</button>
            </form>
        </div>
    </body>
</html>
